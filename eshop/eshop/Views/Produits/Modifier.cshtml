@model eshop.Models.Produit
@{
    ViewBag.Title = "Modifier";
}

<h2>Vous allez modifier le produit :</h2>
@using (Html.BeginForm())
            {
                <form>
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>Modifier un produit</legend>
                        <div class="form-group row">
                            <label for="staticEmail" class="col-sm-2 col-form-label">ID du produit : </label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.IdProduit)
                            </div>
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Nom : </label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.NomProduit)
                                    @Html.ValidationMessageFor(model => model.NomProduit)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Description : </label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Description)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Qauntité : </label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Quantite)
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Prix : </label>
                                <div class="col-sm-10">
                                    @Html.EditorFor(model => model.Prix)
                                </div>
                            </div>
                            <button type="submit" value="Modifier" class="btn btn-primary">Modifier</button>
                            <button type="submit" onclick="location.href='@Url.Action("ListModification()","Produits")'" class="btn btn-default">revenir au catalogue</button>


</form>
            }