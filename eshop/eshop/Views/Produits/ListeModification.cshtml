@model IEnumerable<eshop.Models.Produit>
@{
    ViewBag.Title = "ListeModification";
}

<h2>Choisir le produit à modifier</h2>
<table class="table table-hover">
    <tr tr class="table-secondary">
        <th>@Html.DisplayNameFor(model => model.NomProduit)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.Prix)</th>
        <th>@Html.DisplayNameFor(model => model.Quantite)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.NomProduit)</td>
            <td>@Html.DisplayFor(model => item.Description)</td>
            <td>@Html.DisplayFor(model => item.Prix)</td>
            <td>@Html.DisplayFor(model => item.Quantite)</td>
            <td>@Html.ActionLink("Modifier le Produit", "Modifier", new { id = item.IdProduit })</td>
        </tr>
    }
</table>
