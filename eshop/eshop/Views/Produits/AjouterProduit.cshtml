@model eshop.Models.Produit
@{
    ViewBag.Title = "AjouterProduit";
}

<h2>Ajouter un Produit</h2>
@using (Html.BeginForm("AjouterProduit","Produits", FormMethod.Post,new {enctype="multipart/form-data"}))
            {

            
<form>
    <fieldset>
        <legend>Ajouter un produit</legend>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Nom : </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.NomProduit)
                @Html.ValidationMessageFor(model => model.NomProduit)
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Image du produit : </label>
            <div class="col-sm-10">
                <input type="file" name="Image"/>
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Description : </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Description)
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Qauntité : </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Quantite)
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Prix : </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Prix)
            </div>
        </div>
        <button type="submit" value="AjouterProduit" class="btn btn-primary">Ajouter</button>
        <button type="submit" onclick="location.href='@Url.Action("ListProduit()","Produits")'" class="btn btn-default">revenir au catalogue</button>


</form>
}